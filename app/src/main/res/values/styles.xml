<?xml version="1.0" encoding="utf-8"?>
<!-- res/values/themes.xml -->
<resources>
    <!-- App Theme -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        
        <!-- Sistem barları Compose içinde dinamik olarak ayarlanıyor -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        
        <!-- Screen size ve density ayarları -->
        <item name="android:windowMinWidthMajor">320dp</item>
        <item name="android:windowMinWidthMinor">320dp</item>
        
        <!-- Android 12+ native splash: Blue-Purple gradient ortası renk + splash icon -->
        <item name="android:windowSplashScreenBackground">@color/splash_gradient_mid</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/apptransparent</item>
        <item name="android:windowSplashScreenAnimationDuration">2000</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@android:color/transparent</item>
        
        <!-- Window background -->
        <item name="android:windowBackground">@color/background</item>

        <!-- İstersen renkleri tut -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorOnSurface">@color/on_surface</item>
    </style>
</resources>
